      gap: 12px;
      z-index: 1000;
    }
    .toast {
      display: flex;
      align-items: center;
      gap: 12px;
      background: rgba(255, 255, 255, 0.9);
      border-radius: 12px;
      padding: 12px 18px;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
      user-select: none;
      cursor: pointer;
      font-weight: 600;
      color: #4f46e5;
      animation: slide-in 0.3s ease forwards;
    }
    .toast:hover {
      background-color: #4f46e5;
      color: white;
    }
    .toast .material-icons {
      font-size: 24px;
      flex-shrink: 0;
    }
    @keyframes slide-in {
      from {
        opacity: 0;
        transform: translateX(30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
    @media (max-width: 1024px) {
      #app {
        grid-template-columns: 1fr;
